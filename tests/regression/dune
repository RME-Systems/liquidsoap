   (run %{run_test} %{liquidsoap} %{main_lib} GH1146.liq)
   (run %{run_test} %{liquidsoap} %{main_lib} GH1151.liq)
   (run %{run_test} %{liquidsoap} %{main_lib} GH1159.liq)
   (run %{run_test} %{liquidsoap} %{main_lib} GH1279.liq)
